<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp">
<!--Card View widget-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        app:cardBackgroundColor="#E7E0D3"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        app:contentPadding="15dp">

        <!--Text View over Card View-->
        <ImageView
            android:id="@+id/rankPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@id/friendName"
            app:srcCompat="@drawable/img_user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/friendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:text="Friend Username"
                android:textColor="@color/black"
                android:textSize="50px" />

            <TextView
                android:id="@+id/friendRankTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="1dp"
                android:text="Rank"
                android:textColor="@color/black"
                android:textSize="50px" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>