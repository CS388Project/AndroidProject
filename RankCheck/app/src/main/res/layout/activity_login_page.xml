<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLoginPage"
        style="@style/groupStylebluegray_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="260dp"
            android:layout_marginEnd="@dimen/_30pxh"
            android:layout_marginStart="@dimen/_30pxh"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/img_outputonlinepn" />
        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="text"
            android:drawableStart="@drawable/img_user"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColorHint="@color/black_900"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            tools:ignore="Autofill"
            android:background="@drawable/rectangle_border_black_900_radius_4"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:paddingBottom="@dimen/_12pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_15pxh"
            android:paddingTop="@dimen/_14pxv"
            android:layout_marginTop="30dp"
            android:drawablePadding="@dimen/_23pxh"
            />
        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/img_lock"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColorHint="@color/black_900"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            tools:ignore="Autofill"
            android:background="@drawable/rectangle_border_black_900_radius_4"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:paddingBottom="@dimen/_12pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_15pxh"
            android:paddingTop="@dimen/_14pxv"
            android:layout_marginTop="20dp"
            android:drawablePadding="@dimen/_23pxh"
            />

        <Button
            android:id="@+id/login_button"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_49pxv"
            android:layout_marginEnd="@dimen/_30pxh"
            android:layout_marginStart="@dimen/_30pxh"
            android:layout_marginTop="@dimen/_38pxv"
            android:layout_width="@dimen/_177pxh"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:paddingBottom="@dimen/_12pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            style="@style/btnSolidRounded"
            android:text="Login" />
        <TextView
            android:id="@+id/txtNewUser"
            android:layout_width="wrap_content"
            android:textColor="@color/blue_800"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:singleLine="true"
            android:textAllCaps="true"
            android:clickable="true"
            android:focusable="true"
            android:text="New User?"
            tools:text="New User?" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>