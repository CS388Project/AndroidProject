<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gameImage2"
        android:layout_width="98dp"
        android:layout_height="103dp"
        android:layout_marginStart="16dp"
        android:contentDescription="image"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:layout_constraintWidth_percent=".35"
        app:srcCompat="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/link_username"
        android:layout_width="397dp"
        android:layout_height="49dp"
        android:background="@drawable/rectangle_border_black_900_radius_4"
        android:drawableStart="@drawable/img_user"
        android:drawablePadding="@dimen/_23pxh"
        android:hint="Username"
        android:inputType="text"
        android:lineSpacingExtra="@dimen/_4pxh"
        android:paddingStart="@dimen/_15pxh"
        android:paddingTop="@dimen/_14pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_12pxv"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColorHint="@color/black_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameDescription"
        app:layout_constraintVertical_bias="0.05"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/gameDescription"
        android:layout_width="390dp"
        android:layout_height="223dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:text="Game Detail to link goes here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameTitle" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:text="Remove Game"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="139dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="Game Name"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameImage2" />

    <CheckBox
        android:id="@+id/consent_check"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:text="I consent to RankCheck to access my data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/link_username"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/link_button"
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:text="Link Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consent_check"
        app:layout_constraintVertical_bias="0.379" />


</androidx.constraintlayout.widget.ConstraintLayout>